FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Create non-root user (optional for development)
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nodejs -u 1001

# Expose port
EXPOSE 5000

# Health check script
COPY health-check.js ./

# Start the application with development settings
CMD ["npm", "run", "dev"]
